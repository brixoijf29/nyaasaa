    <div class="container">
        <h1>Hey [Bro]!</h1>
        <p>I just wanted to let you know.</p>
        <button onclick="showFact()">Click</button>
        <div id="fact"></div>
    </div>

    <script>
        const facts = [
            "WAG KA NA MAG SHABU KUPAL.",
            "LUBOG NA PANGA MO TANGA.",
            "IPAHULI KITA EH.",
            "SHIBULI."
        ];

        function showFact() {
            const randomIndex = Math.floor(Math.random() * facts.length);
            const factElement = document.getElementById('fact');
            factElement.textContent = facts[randomIndex];
        }
    </script>
